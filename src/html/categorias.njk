<div class="bg-white p-10">
    <h1 class="text-3xl font-bold">{{categoria.nombre}}</h1>
    <p class="font-bold">Categorías</p>
    <ul>
    {% for subcategoria in categoria.hijos %}
        <li><a href="/{{subcategoria.nombre | slug}}">{{subcategoria.nombre}}</a></li>
    {% endfor %}
    <ul>
    <p class="font-bold">Filtros</p>
    {% for filtro in categoria.filtros %}
        <h5>{{filtro.nombre}}</h5>
        <ul>
            {% for valor in filtro.valores %}
            <li>{{valor}}</li>
            {% endfor %}
        </ul>
    {% endfor %}
</div>

<section class="container mt-20">
    <div class="grid grid-cols-3 mt-10 gap-4">
        {% for producto in categoria.productos %}
            <a href="/productos/{{producto.id}}/{{producto.nombre | slug}}" class="bg-[#f5f5f5] rounded-lg">
                <img src="{{producto.imagen}}" class="rounded-lg" alt="{{producto.nombre}}">
                <div class="p-5">
                    <p class="text-lg">{{producto.nombre}}</p>
                    <div class="flex text-lg mt-3">
                        <span class="text-gray-500 line-through">{{producto.precio}} €</span>
                        <span class="ml-10">{{producto.precioOferta}} €</span>
                    </div>
                </div>
            </a>            
        {% endfor %}
