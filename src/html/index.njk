{% extends "layouts/default.njk" %}

{% block content %}
<div class="p-20">
    {% include "macros/banner.njk" %}
</div>

<section class="container">
    <p class="font-bold text-3xl text-center mt-20">MEJORES OFERTAS</p>
    <div class="flex justify-around mt-10 space-x-10">
        {% for oferta in ofertas %}
            <a href="/{{ oferta.categoria | slug }}/{{ oferta.producto | slug }}/" class="bg-[#f5f5f5] rounded-lg">
                <img src="{{ oferta.imagen }}" class="rounded-lg" alt="">
                <div class="p-5">
                    <p class="text-lg">{{ oferta.producto }}</p>
                    <div class="flex text-lg mt-3">
                        <span class="text-gray-500 line-through">{{ oferta.precio }} €</span>
                        <span class="ml-10">{{ oferta.precioOferta }} €</span>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
</section>

<section class="container flex justify-around mt-20 p-14">
    <div>
        <a href="/hombre">
            <img src="/images/hombre.png" class="mb-10" alt="">
            <span class="text-3xl font-bold ml-8">HOMBRE</span>
        </a>
    </div>
    <div>
        <a href="/mujer">
            <img src="/images/mujer.png" class="mb-10" alt="">
            <span class="text-3xl font-bold ml-6">MUJER</span>
        </a>
    </div>
</section>

<div class="p-20">
    {% include "macros/banner.njk" %}
</div>

<script type="module">
    import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.esm.browser.min.js'  
    const swiper = new Swiper('.swiper')
</script>
{% endblock %}


    
